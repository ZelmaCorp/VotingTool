{
  "name": "OpenGov Voting Tool",
  "version": "2.2.1",
  "description": "A helper tool for small DAOs to vote on proposals",
  "main": "api/rss.js",
  "scripts": {
    "build": "npm run build:compile && npm run build:version",
    "build:version": "node build-version.js",
    "build:compile": "tsc",
    "build:versioned": "APP_VERSION=$(node -p \"require('./package.json').version\") tsc",
    "start": "node dist/src/app.js",
    "start:versioned": "APP_VERSION=$(node -p \"require('./package.json').version\") node dist/src/app.js",
    "version:patch": "npm version patch && npm run build",
    "version:minor": "npm version minor && npm run build",
    "version:major": "npm version major && npm run build",
    "version:check": "node check-version.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:all": "jest tests/unit tests/integration",
    "test:unit:rate-limit": "jest tests/unit/rate-limit",
    "test:unit:utils": "jest tests/unit/utils",
    "test:unit:fetch": "jest tests/unit/fetchReferendas.test.ts",
    "test:integration:rate-limit": "jest tests/integration/rate-limit-demo.test.ts",
    "test:integration:polkassembly": "jest tests/integration/polkassembly.content.test.ts",
    "test:integration:coingecko": "jest tests/integration/coingecko.integration.test.ts",
    "test:integration:fetch": "jest tests/integration/fetchReferendas.test.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@polkadot/api": "^15.10.2",
    "@polkadot/extension-dapp": "^0.58.5",
    "@polkadot/keyring": "^13.4.3",
    "@types/cors": "^2.8.19",
    "axios": "^1.9.0",
    "axios-retry": "^4.5.0",
    "body-parser": "^1.20.3",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fast-xml-parser": "^4.5.0",
    "jsdom": "^26.0.0",
    "moment": "^2.30.1",
    "node-fetch": "^2.7.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "sqlite3": "^5.1.7",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.15.29",
    "@types/pino": "^7.0.4",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "nock": "^14.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.3.4",
    "typescript": "^5.7.3"
  }
}
