{
  "name": "opengov-votingtool-extension",
  "version": "1.0.3",
  "description": "OpenGov VotingTool Browser Extension",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:content && npm run build:popup && npm run build:background && npm run build:inject && npm run build:assets",
    "build:content": "vite build --config vite.content.config.ts",
    "build:popup": "vite build --config vite.popup.config.ts",
    "build:background": "vite build --config vite.background.config.ts",
    "build:inject": "vite build --config vite.inject.config.ts",
    "build:assets": "node build.js",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "version:patch": "npm version patch && npm run build",
    "version:minor": "npm version minor && npm run build",
    "version:major": "npm version major && npm run build",
    "version:check": "node check-version.js"
  },
  "dependencies": {
    "@polkadot/api": "^16.4.6",
    "@polkadot/extension-dapp": "^0.61.7",
    "@polkadot/util": "^13.5.6",
    "@polkadot/util-crypto": "^13.5.6",
    "axios": "^1.11.0",
    "pinia": "^3.0.3",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.5",
    "@types/webextension-polyfill": "^0.10.7",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vue/test-utils": "^2.4.0",
    "happy-dom": "^12.10.3",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.1"
  }
}
