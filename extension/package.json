{
  "name": "opengov-votingtool-extension",
  "version": "1.0.0",
  "description": "OpenGov VotingTool Browser Extension",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:content && npm run build:popup && npm run build:background && npm run build:assets",
    "build:content": "vite build --config vite.content.config.ts",
    "build:popup": "vite build --config vite.popup.config.ts",
    "build:background": "vite build --config vite.background.config.ts",
    "build:assets": "node build.js",
    "build:simple": "node build.js",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "install:dev": "npm install && npm run build:simple"
  },
  "dependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@types/webextension-polyfill": "^0.10.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  }
} 