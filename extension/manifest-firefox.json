{
  "manifest_version": 2,
  "name": "OpenGov VotingTool Browser Extension",
  "version": "1.0.0",
  "description": "A browser extension that overlays on Polkassembly and Subsquare to help you vote on OpenGov proposals",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "https://polkadot.polkassembly.io/*",
    "https://kusama.polkassembly.io/*",
    "https://polkadot.subsquare.io/*",
    "https://kusama.subsquare.io/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://polkadot.polkassembly.io/*",
        "https://kusama.polkassembly.io/*",
        "https://polkadot.subsquare.io/*",
        "https://kusama.subsquare.io/*"
      ],
      "js": ["dist/content.js"],
      "css": ["design-system.css", "overlay.css"]
    }
  ],
  "browser_action": {
    "default_popup": "dist/popup.html",
    "default_title": "OpenGov VotingTool"
  },
  "background": {
    "scripts": ["dist/background.js"]
  },
  "icons": {
    "16": "dist/icons/icon16.svg",
    "48": "dist/icons/icon48.svg",
    "128": "dist/icons/icon128.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "opengov-votingtool@example.com"
    }
  }
} 